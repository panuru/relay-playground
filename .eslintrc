{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "no-confusing-arrow": 0,
    "react/jsx-quotes": 0,
    "jsx-quotes": [2, "prefer-double"],
    "comma-dangle": 0,
    "no-console": 0,
    "no-else-return": 0,

    // disable prop-types validation for GraphQL props
    "react/prop-types": 0
  }
}
